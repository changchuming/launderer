extends layout

block styles
block content
  .main
    .main-body
      #cluster
        #four(v-if='(machines.length == 4)')
          .machinecontainer(v-for='machine in machines', v-bind:style="{ width: 100/machines.length + '%' }")
            .machinetext(v-if="machine.state" style='color:#CB4335') In Use
            .machinetext(v-if="!machine.state"  style='color:#28B463') Idle
            img.machine(v-bind:src="machine.state ? machine.inuse : machine.idle", v-on:click="toggleMachineUsage(title, machines.indexOf(machine))", alt="Picture of machine", style='width:100%;height:auto;')
            .usertext(style='color:#fff') {{machine.user}}
      #register
        .input-group
          span.input-group-addon @
          input#name.keyboard.form-control(type='text', placeholder='Your nickname')
        | <br>
        .input-group
          span.input-group-addon +65
          input#number.keyboard.form-control(type='text', placeholder='Your number')
          span.input-group-btn
            button#submit.btn.btn-default(type='button') Go!
        | <br>
      p#message 
