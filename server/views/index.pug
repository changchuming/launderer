extends layout

block styles
  link(rel='stylesheet', type='text/css', href='/css/index.css')
block content
  .main
    .main-body
      .container
        .panel.panel-success
          .panel-heading
            h3 Dragon
          .panel-body
            .row
              .col-md-3
                p.machine Dryer 1
                .progress
                  .progress-bar(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', style='width: 60%;')
                    | 21:55
              .col-md-3
                p.machine Dryer 2
                .progress
                  .progress-bar(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', style='width: 50%;')
                    | 20:55
              .col-md-3
                p.machine Washer 1
                .progress
                  .progress-bar(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', style='width: 40%;')
                    | 15:55
              .col-md-3
                p.machine Washer 2
                .progress
                  .progress-bar(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', style='width: 30%;')
                    | 10:55
            .row(data-bind='foreach: picArray')
        .panel.panel-danger
          .panel-heading
            h3 Phoenix
          .panel-body
            .row
              .col-md-3
                p.machine Dryer 1
                .progress
                  .progress-bar(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', style='width: 60%;')
                    | 21:55
              .col-md-3
                p.machine Dryer 2
                .progress
                  .progress-bar(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', style='width: 50%;')
                    | 20:55
              .col-md-3
                p.machine Washer 1
                .progress
                  .progress-bar(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', style='width: 40%;')
                    | 15:55
              .col-md-3
                p.machine Washer 2
                .progress
                  .progress-bar(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', style='width: 30%;')
                    | 10:55
            .row(data-bind='foreach: picArray')
block footer
